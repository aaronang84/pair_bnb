<h2><%= current_user.first_name %> <%= current_user.last_name %> </h2>

<p>Email address: <%= current_user.email %></p>

<div id='profile_pic'>
  <h4> Your profile picture <br><%= link_to image_tag(current_user.avatar) %></h4>
</div>

<div class="btn-toolbar">
<%= link_to "Edit", edit_user_path, class: "btn btn-primary" %>
<%= button_to "Delete", {:controller => "users", :action => 'destroy', :id => @user.id}, :confirm => "Are you sure you want to delete your account?", :method => :delete, class: "btn btn-primary" %>
</div>